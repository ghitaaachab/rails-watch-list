<p><%= @list.name %></p>

<hr>

<%= simple_form_for [@list, @bookmark] do |f| %>
  <div class="field">
    <%= f.label :movie_id %>
    <%= f.collection_select(:movie_id, Movie.all, :id, :title, prompt: "Select a Movie") %>
    <%= f.input :comment  %>
  </div>

  <%= f.submit "Create Bookmark" %>

<% end %>

<ul>
  <% @list.bookmarks.each do |bookmark| %>
    <li><%= bookmark.movie.title %> / <%= bookmark.comment %></li>
  <% end %>
</ul>

